<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exit_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/app_exit_rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/app_exit_lbl_header_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="Exit"
            android:textColor="@color/exit_header_text_color"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_exit_lbl_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_exit_lbl_header_exit"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical|center_horizontal"
            android:text="Do you want to exit?"
            android:textColor="@color/exit_gray"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:id="@+id/app_exit_btn_no"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/app_exit_lbl_header"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/exit_button_no_selector">

            <TextView
                android:id="@+id/app_exit_lbl_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="No"
                android:textColor="@color/exit_white"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app_exit_btn_yes"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/app_exit_lbl_header"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/app_exit_btn_no"
            android:background="@drawable/exit_button_selector">

            <TextView
                android:id="@+id/app_exit_lbl_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Yes"
                android:textColor="@color/exit_white"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/app_exit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_exit_rel_top"
        android:layout_above="@+id/ad_layout">

        <RelativeLayout
            android:id="@+id/app_exit_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/exit_border" >

                <RelativeLayout
                    android:id="@+id/exit_static_ad_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/app_exit_lbl_footer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:autoLink="web"
                        android:text="@string/exit_ads_footer"
                        android:textColor="@color/exit_white"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/homestatic_img_footer"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/app_exit_lbl_footer"
                        android:autoLink="web"
                        android:tint="#fffc00"
                        android:src="@drawable/exit_ad_info_exit" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/app_exit_middle_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exit_static_ad_lbl"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:weightSum="4" >

                    <RelativeLayout
                        android:id="@+id/app_exit_app_layout_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/exit_home_static_app_bg_selector" >

                        <ImageView
                            android:id="@+id/app_exit_img_icon_1"
                            android:layout_width="@dimen/exit_static_app_icon_width"
                            android:layout_height="@dimen/exit_static_app_icon_width"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/exit_sample_loading" />

                        <TextView
                            android:id="@+id/app_exit_txt_app_name_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app_exit_img_icon_1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:lines="2"
                            android:text="App Name"
                            android:textColor="@color/exit_white"
                            android:textSize="@dimen/app_name_text_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/app_exit_app_layout_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/exit_home_static_app_bg_selector">

                        <ImageView
                            android:id="@+id/app_exit_img_icon_2"
                            android:layout_width="@dimen/exit_static_app_icon_width"
                            android:layout_height="@dimen/exit_static_app_icon_width"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/exit_sample_loading" />

                        <TextView
                            android:id="@+id/app_exit_txt_app_name_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app_exit_img_icon_2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:lines="2"
                            android:text="App Name"
                            android:textColor="@color/exit_white"
                            android:textSize="@dimen/app_name_text_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/app_exit_app_layout_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/exit_home_static_app_bg_selector">

                        <ImageView
                            android:id="@+id/app_exit_img_icon_3"
                            android:layout_width="@dimen/exit_static_app_icon_width"
                            android:layout_height="@dimen/exit_static_app_icon_width"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/exit_sample_loading" />

                        <TextView
                            android:id="@+id/app_exit_txt_app_name_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app_exit_img_icon_3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:lines="2"
                            android:text="App Name"
                            android:textColor="@color/exit_white"
                            android:textSize="@dimen/app_name_text_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/app_exit_app_layout_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/exit_home_static_app_bg_selector">

                        <ImageView
                            android:id="@+id/app_exit_img_icon_4"
                            android:layout_width="@dimen/exit_static_app_icon_width"
                            android:layout_height="@dimen/exit_static_app_icon_width"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/exit_sample_loading" />

                        <TextView
                            android:id="@+id/app_exit_txt_app_name_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/app_exit_img_icon_4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:lines="2"
                            android:text="App Name"
                            android:textColor="@color/exit_white"
                            android:textSize="@dimen/app_name_text_size" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/native_ad_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>